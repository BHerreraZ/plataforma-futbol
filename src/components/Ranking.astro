      <th class="py-1 px-2 border bg-gray-200">GF</th>
      <th class="py-1 px-2 border bg-gray-200">GC</th>
      <th class="py-1 px-2 border bg-gray-200">DG</th>
      <th class="py-1 px-4 border bg-gray-200">Puntos</th>
    </tr>
  </thead>
  <tbody>
    {equipos.map((equipo, index) => {
        // Estilos condicionales para las filas
        let rowClass = 'text-center';
        if (index < 2) {
          rowClass += ' bg-green-100';
        } else if (index < 3) {
          rowClass += ' bg-yellow-100';
        } else if (index < 7){
          rowClass += ' bg-blue-100';
        } else if (index > 13){
          rowClass += ' bg-red-100';
        }
        return (
      <tr class={rowClass}>
        <td class="py-1 px-2 border bg-gray-100"><strong>{index+1}°</strong></td>
        <td class="py-1 px-4 border"><strong>{equipo.nombre}</strong></td>
        <td class="py-1 px-2 border">{equipo.partidosJugados}</td>
        <td class="py-1 px-2 border">{equipo.partidosGanados}</td>
        <td class="py-1 px-2 border">{equipo.partidosEmpatados}</td>
        <td class="py-1 px-2 border">{equipo.partidosPerdidos}</td>
        <td class="py-1 px-2 border">{equipo.golesFavor}</td>
        <td class="py-1 px-2 border">{equipo.golesContra}</td>
        <td class="py-1 px-2 border">{equipo.diferenciaGoles}</td>
        <td class="py-1 px-4 border bg-white"><strong>{equipo.puntaje}</strong></td>
      </tr>
      );
    })}
  </tbody>
</table>
