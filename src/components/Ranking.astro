<table class="bg-white rounded mx-auto">
  <thead>
    <tr>
      <th class="py-1 px-4 border bg-gray-200"></th>
      <th class="py-1 px-4 border bg-gray-200">Equipo</th>
      <th class="py-1 px-2 border bg-gray-200">PJ</th>
      <th class="py-1 px-2 border bg-gray-200">PG</th>
      <th class="py-1 px-2 border bg-gray-200">PE</th>
